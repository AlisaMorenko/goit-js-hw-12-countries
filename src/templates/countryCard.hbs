<div class="card">
    <div class="flag-img">
        <img src="{{flag}}" alt="{{name}}">
    </div>
    <div class="card-body">
        <h1 class="card-title">{{name}}</h1>
        <p class="capital">Capital: {{capital}}</p>
        <p class="population">Population: {{population}}</p>
        <p class="languages"><b>Languages: </b></p>
        <ul class="list-languages">
        {{#each languages}}
        <li class="list-group-item">{{languages.name}}</li>
        {{/each}}
        </ul>
    </div>
</div>